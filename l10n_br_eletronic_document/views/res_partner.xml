<odoo>
    <record id="view_nfe_res_partner_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_br_base_address.view_account_partner_form"/>
        <field name="arch" type="xml">
            <field name="l10n_br_suframa" position="after" >
                <field name="l10n_br_indicador_ie_dest" />
            </field>
        </field>
    </record>
    <!-- AX4B - RG e CRC -->
    <record id="view_partner_extends" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="document_counter" placeholder="RG" nolabel="1"/>
                <field name="registry_counter" placeholder="CRC" nolabel="1"/>
            </field>
        </field>
    </record>

    <record id="view_br_base_partner_tree" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree" />
        <field name="arch" type="xml">
            <field name="email" position="after">
                <field name="document_counter" />
                <field name="registry_counter" />
            </field>
        </field>
    </record>
    <!-- AX4B - RG e CRC -->
</odoo>
