<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="redirect_message">
        <t t-call="website.layout">
            <div class="oe_structure">
                <form string="Embedded Webpage">
                    <div class="container">

                        <div id="message" class="text-center text-danger mt-5">
                        
                            <h2>You will be redirected in a few moments to the IUGU payment platform.</h2>
                            <!-- <h2>Você será redirecionado em instantes para plataforma de pagamento da IUGU.</h2> -->
                            
                            <div class="spinner-border text-danger mt-2" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>

                            <div class="mt-5">
                                <p class="mt-3 d-none"><span id="payment_span" t-esc="request.session.get('secure_url')"/></p>
                                <h3 id="payment_countdown">3</h3>
                            </div>

                        </div>

                    </div>
                </form>
            </div>
        </t>
    </template>
</odoo>
